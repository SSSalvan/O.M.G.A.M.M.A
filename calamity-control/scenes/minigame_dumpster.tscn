script/source = "extends Node2D
signal winCon
signal loseCon

@onready var trash_scene = preload(\"res://scenes/minigame_dumpster_trash.tscn\")
@export var spawn_interval := 1.5
@onready var catch_label = $CatchLabel

var timer := 0.0
var catch_count := 0
var total_time := 0.0

func _ready() -> void:
	catch_label.text = \"Caught: %d\" % catch_count
	
func increase_catch_count():
	catch_count += 1
	catch_label.text = \"Caught: %d\" % catch_count
	#print(\"Trash Caught:\", catch_count)

func _process(delta):
	timer += delta
	total_time += delta
	
	if timer >= spawn_interval:
		timer = 0
		spawn_trash()
		
	if catch_count == 10:
		emit_signal(\"winCon\")
		queue_free()
	if total_time >= 30:
		emit_signal(\"loseCon\")
		queue_free()

func spawn_trash():
	var trash = trash_scene.instantiate()
	add_child(trash)

	trash.minigame = self  # still works even if root is just Node2D

	trash.position = Vector2(
		randf_range(-900, 900),
		-1000
	)
"

